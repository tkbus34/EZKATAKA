            <TextBox Grid.ColumnSpan="2" Grid.Column="2" HorizontalAlignment="Left" Height="42" Margin="0" Grid.Row="3" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="185" Background="Transparent"/>
            <ComboBox Grid.ColumnSpan="2" Grid.Column="2" HorizontalAlignment="Left" Margin="0,41,0,0" Grid.Row="3" VerticalAlignment="Top" Width="185" Height="43" Grid.RowSpan="2"/>
            <Button Content="Button" Grid.Column="1" HorizontalAlignment="Left" Margin="3,5,0,0" Grid.Row="6" VerticalAlignment="Top" Width="83" Height="32"/>
            <Button Content="Button" Grid.Column="2" HorizontalAlignment="Left" Margin="5,4,0,0" Grid.Row="6" VerticalAlignment="Top" Width="176" Grid.ColumnSpan="2" Height="32"/>
